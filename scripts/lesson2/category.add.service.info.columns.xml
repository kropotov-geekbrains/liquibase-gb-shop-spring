<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">


    <changeSet id="before_category_add_service_info_columns" author="zhilin"
               labels="version, created_by, created_date, last_modified_by, last_modified_date">
        <tagDatabase tag="before_category_add_service_info_columns"/>
    </changeSet>

    <changeSet id="category_add_service_info_columns" author="zhilin"
               labels="version, created_by, created_date, last_modified_by, last_modified_date">
        <addColumn tableName="CATEGORY">
            <column name="VERSION" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="varchar(255)"/>
            <column name="CREATED_DATE" type="TIMESTAMP"/>
            <column name="LAST_MODIFIED_BY" type="varchar(255)"/>
            <column name="LAST_MODIFIED_DATE" type="TIMESTAMP"/>
        </addColumn>
    </changeSet>


</databaseChangeLog>
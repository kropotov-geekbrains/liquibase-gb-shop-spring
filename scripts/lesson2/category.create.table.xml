<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="before_add_version_columns_to.CATEGORY" author="kuranov" context="postgresql"
               labels="category_id">
        <tagDatabase tag="before_add_versions_column_to.CATEGORY"/>
    </changeSet>

    <changeSet id="add_version_columns_to.CATEGORY" author="kuranov" context="postgresql" labels="category_id">
        <addColumn tableName="CATEGORY">
            <column name="VERSION" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATE_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_MODIFY_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFY_DATE" type="DATE"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>

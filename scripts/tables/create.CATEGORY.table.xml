<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="before_add_create_table.CATEGORY" author="kuranov">
        <tagDatabase tag="before_add_create_table.CATEGORY"/>
    </changeSet>

    <changeSet id="create_table.CATEGORY" author="kuranov">
        <createTable tableName="CATEGORY">
            <column name="ID" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="TITLE" type="VARCHAR(255)"/>
            <column name="VERSION" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATE_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_MODIFY_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFY_DATE" type="DATE"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
